<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.CoreActivity">

    <TextView
        android:id="@+id/tv_client_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show Client ID"
        android:textColor="@color/material_dynamic_primary60"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_device_id"/>

    <TextView
        android:id="@+id/tv_device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show Device ID"
        android:textColor="@color/material_dynamic_primary60"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_client_id"
        app:layout_constraintBottom_toTopOf="@id/tv_session_id"/>

    <TextView
        android:id="@+id/tv_session_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show Session ID"
        android:textColor="@color/material_dynamic_primary60"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_device_id"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>